@model AthleteSystem.Models.Athlete

@{
    ViewData["Title"] = "Delete Athlete";
}

<h2>Delete Athlete</h2>
<h4>Are you sure you want to delete this athlete?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Age</dt>
    <dd class="col-sm-10">@Model.Age</dd>

    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Model.Gender</dd>

    <dt class="col-sm-2">Sport Category</dt>
    <dd class="col-sm-10">@Model.SportCategory</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Athlete" class="btn btn-secondary">Cancel</a>
</form>
